<%- contentFor('content') %>
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <h3>Profit</h3>
                            </a>
                        </div>

                        <div class="login-form">
                            <form action="" method="post" id="productForm">

                                <div class="form-group">
                                    <label>Fulfillment Unit Cost</label>
                                    <input class="au-input au-input--full product_price" type="text" name="product_price" value="<%= fulfilledUnitCost %> <%= fulfilledUnitCostCurrency %>" disabled>
                                </div>

                                <div class="form-group">
                                    <label>Selling Price</label>
                                    <input class="au-input au-input--full selling_price" type="text" name="selling_price" value="<%= selling_price %>" placeholder="Enter Selling Price">
                                </div>

                                <% if(profitability == true )   {%>
                                <div class="form-group">
                                    
                                    <% if(profit > 0)   {%>
                                        <label>Profit</label>
                                        <input style="background : #b9efc2" class="au-input au-input--full" type="text" value="<%= profit %>" disabled>
                                    <% } else{ %>
                                        <label>Loss</label>
                                    <input style="background : #efa6a6" class="au-input au-input--full" type="text" value="<%= profit %>" disabled>
                                    <% } %>
                                </div>

                                <div class="form-group">
                                    
                                    <% if(profitper > 0)   {%>
                                        <label>Profit%</label>
                                        <input style="background : #b9efc2" class="au-input au-input--full" type="text" value="<%= profitper %>" disabled>
                                    <% } else{ %> 
                                        <label>Loss%</label>
                                    <input style="background : #efa6a6" class="au-input au-input--full" type="text" value="<%= profitper %>" disabled>
                                    <% } %>
                                </div>
                                <% } %>

                        </div>
                        <button class="au-btn au-btn--block au-btn--green m-b-20 submit" type="submit">submit</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>

    <script>
        $(function() {
            $(document).on('click', '.submit', function() {
                $.ajax ({
                    url: "products/postProfitForProduct/:id",
                    type: "POST",
                    data: {
                        selling_price: function() {
                            var value = $('.selling_price').val();
                            return value;
                        }
                    },
                    success: function(result) {
                        location.reload(true);
                    }
                }) 
            }
        
        }
    </script>