<%- contentFor('content') %>
<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <h3>Add Product</h3>
                        </a>
                    </div>

                    <div class="login-form">
                        <form action="/products/add-product" method="post" id="productForm">
                            <div class="form-group">
                                <label>SKU</label>
                                <input class="au-input au-input--full" name="sku" placeholder="SKU" >
                            </div>

                            <div class="form-group">
                                <label>ASIN</label>
                                <input class="au-input au-input--full" name="asin" placeholder="ASIN" >
                            </div>

                            <div class="form-group">
                                <label>Product Title</label>
                                <input class="au-input au-input--full" name="title" placeholder="Product Title" >
                            </div>

                            <div class="form-group">
                                <label>Product Brand</label>
                                <input class="au-input au-input--full" name="brand" placeholder="Product Brand" >
                            </div>

                            <div class="form-group">
                                <label>Product Description</label>
                                <input class="au-input au-input--full" name="description" placeholder="Product Description" >
                            </div>

                            <div class="form-group">
                                <label>Price</label>
                                <input class="au-input au-input--full" type="text" name="price" placeholder="USD">
                            </div>

                            <div class="form-group">
                                <label>Manufacturer</label>
                                <input class="au-input au-input--full" type="text" name="manufacturer"
                                    placeholder="enter Manufacturer">
                            </div>

                            <div class="form-group">
                                <label>ItemType</label>
                                <input class="au-input au-input--full" type="text" name="itemtype" placeholder="enter itemtype">
                            </div>
                    
                    </div>
                    <button class="au-btn au-btn--block au-btn--green m-b-20 submitbtn <%= counter %>" type="submit">submit</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</div>

<script>
    if($('.submitbtn').hasClass('29')){
        $('.submitbtn').attr('disabled', 'disabled');
        
        setInterval(function(){
            $('.submitbtn').removeAttr('disabled'); 
            $('.submitbtn').removeClass('29'); 
            $('.submitbtn').addClass('0'); 
        }, 3600000);
    }   

    $("#productForm").validate({
        rules: {
            "productname": {
                required: true,
            },
            "productdesc": {
                required: true
            },
            "productquant": {
                required: true
            },
            "productprice": {
                required: true
            },
            "samplefee": {
                required: true,
            },
            "miscfee": {
                required: true
            },
            "unitshippingcost": {
                required: true
            },
            "referralfee": {
                required: true
            },
            "fbafee": {
                required: true
            }
        },
        messages: {
            "productname": {
                required: "Product name can't be blank",
            },
            "productdesc": {
                required: "Product description can't be blank"
            },
            "productquant": {
                required: "Quantity can't be blank"
            },
            "productprice": {
                required: "Price can't be blank"
            },
            "samplefee": {
                required: "Sample fee can't be blank",
            },
            "miscfee": {
                required: "Misc fee can't be blank"
            },
            "unitshippingcost": {
                required: "Unit Shipping cost can't be blank"
            },
            "referralfee": {
                required: "Referral fee can't be blank"
            },
            "fbafee": {
                required: "FBA fee can't be blank"
            }
        },
        submitHandler: function (form) {
            form.submit();
        }
    });
</script>