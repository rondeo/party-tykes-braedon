<%- contentFor('content') %>
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <h3>Edit Product</h3>
                            </a>
                        </div>

                        <div class="login-form">
                            <form action="/products/edit-product/<%= product._id %>" method="post" id="test-form">
<!-- 

                            <div class="form-group">
                                <label>Product Title</label>
                                <input class="au-input au-input--full" name="title" placeholder="Product Title">
                            </div> -->

                            <!-- <div class="form-group">
                                <label>Product Brand</label>
                                <input class="au-input au-input--full" name="brand" placeholder="Product Brand" >
                            </div> -->

                            <div class="form-group">
                                <label>Product Description</label>
                                <input class="au-input au-input--full" name="description" placeholder="Product Description"  value="<%= product.ProductDesc %>">
                            </div>

                            <div class="form-group">
                                <label>SKU</label>
                                <input class="au-input au-input--full" name="sku" placeholder="SKU" value="<%= product.SellerSKU %>" disabled>
                            </div>

                            <div class="form-group">
                                <label>ASIN</label>
                                <input class="au-input au-input--full" name="asin" placeholder="ASIN" value="<%= product.ASIN %>" disabled>
                            </div>

                            <div class="form-group">
                                <label>Buycost</label>
                                <input class="au-input au-input--full" name="buycost" value="<%= product.buycost %>" placeholder="Product Buycost" >
                            </div>
                        </div>
                        <button class="au-btn au-btn--block au-btn--green m-b-20 submitbtn <%= counter %>" type="submit">submit</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>

<script>
    if($('.submitbtn').hasClass('29')){
        $('.submitbtn').attr('disabled', 'disabled');
        
        setInterval(function(){
            $('.submitbtn').removeAttr('disabled'); 
            $('.submitbtn').removeClass('29'); 
            $('.submitbtn').addClass('0'); 
        }, 3600000);
    } 
</script>